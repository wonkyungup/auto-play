{
  "name": "youtube-shorts-play",
  "manifest_version": 3,
  "version": "0.0.1",
  "permissions": [
    "storage",
    "tabs"
  ],
  "description": "youtube shorts video auto next play",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16_disable.png",
      "48": "icon48_disable.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://*/*"]
}
