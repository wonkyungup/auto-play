{
  "name": "Auto Youtube Shorts Scroll Down",
  "manifest_version": 3,
  "version": "1.0.3",
  "permissions": [
    "tabs"
  ],
  "description": "Auto Youtube Shorts Scroll Down",
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png"
  },
  "action": {
    "default_icon": {
      "16": "16x16.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/shorts/*"
      ],
      "js": ["content.js"]
    }
  ]
}
